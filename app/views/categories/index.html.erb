<h1>Categories：カテゴリー一覧</h1>
<%= render 'form', category: @category %>
<br>
<p id="notice"><%= notice %></p>

<table>
  <thead bgcolor="#006e54">
    <tr>
      <th>Name:カテゴリー名</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td style="padding:5px"><%= category.name %></td>
        <td style="padding:5px"><%= link_to '編集', edit_category_path(category),class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '削除してもよろしいですか?' } ,class: 'btn btn-warning btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
