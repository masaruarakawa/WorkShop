<h2>計算ドリル</h2>
<p>問題パターンの作成</P>
<%= render 'form', math_work: @math_work %>
<p id="notice"><%= notice %></p>
<br>
<table class='table table-bordered'>
  <thead>
    <tr>
      <th>数１の桁数</th>
      <th>数２の桁数</th>
      <th>計算の種類</th>
      <th>作成する問題数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @math_works.each do |math_work| %>
      <tr>
        <td><%= math_work.digit1 %></td>
        <td><%= math_work.digit2 %></td>
        <td><%= math_work.operator %></td>
        <td><%= math_work.times %></td>
        <td><%= link_to '学習する', math_work ,class: 'btn btn-primary btn-xs'%></td>
        <td><%= link_to '編集', edit_math_work_path(math_work) ,class: 'btn btn-info btn-xs'%></td>
        <td><%= link_to '削除', math_work, method: :delete, data: { confirm: '削除してもよろしいですか?' } ,class: 'btn btn-warning btn-xs'%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
