<%= form_with(model: task, local: true, html: {class: 'form-horizontal', role: 'form'}) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= form.label :category_id, class: 'col-sm-2 control-label' %>
    <%= form.select :category_id, Category.all.map{|o| [o.name, o.id]} %>&nbsp;
    <%= link_to 'カテゴリーの新規追加', categories_path ,class: 'btn btn-default btn-sm'%>

  </div>

  <div class='form-group'>
    <%= form.label :task, class: 'col-sm-2 control-label' %>
    <%= form.text_field :task, id: :task_task, class: 'col-sm-7' %>
  </div>

  <div class="actions">
    <%= form.submit '登録/更新',class: 'btn btn-success btn-xs ' %>
  </div>
<% end %>
