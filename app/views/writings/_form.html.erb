<%= form_with(model: writing, local: true, html: {class: 'form-horizontal', role: 'form'}) do |form| %>
  <% if writing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(writing.errors.count, "error") %> prohibited this writing from being saved:</h2>

      <ul>
      <% writing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= form.label :question：問題 , class: 'col-sm-2 control-label'%>
    <%= form.text_field :question, id: :writing_question ,size:"50"%>
  </div>

  <div class='form-group'>
    <%= form.label :correct：正解, class: 'col-sm-2 control-label' %>
    <%= form.text_field :correct, id: :writing_correct ,size:"50"%>
  </div>

  <div class='form-group'>
    <%= form.label :hint：ヒント, class: 'col-sm-2 control-label' %>
    <%= form.text_field :hint, id: :writing_hint ,size:"50"%>
  </div>

  <div class='form-group'>
    <%= form.label :explanation：解説, class: 'col-sm-2 control-label' %>
    <%= form.text_field :explanation, id: :writing_explanation ,size:"50"%>
  </div>

  <div class="actions">
    <%= form.submit '登録/更新',class: 'btn btn-success btn-xs'%>
  </div>
<% end %>
